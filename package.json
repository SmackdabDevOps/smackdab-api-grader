{
  "name": "smackdab-api-grader-mcp",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "description": "Smackdab API Contract Grader â€” MCP server",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsc --noEmit",
    "dev": "tsx watch src/mcp/server-sdk.ts",
    "dev:stdio": "tsx watch src/mcp/server-sdk.ts --stdio",
    "dev:http": "tsx watch src/mcp/server-sdk.ts",
    "start": "NODE_ENV=production tsx src/api/rest-server.ts",
    "start:rest": "NODE_ENV=production tsx src/api/rest-server.ts",
    "start:mcp-http": "NODE_ENV=production tsx src/mcp/server-sdk.ts",
    "start:legacy": "NODE_ENV=production tsx src/mcp/server-sse-simple.ts",
    "migrate": "tsx src/mcp/persistence/migrate-unified.ts",
    "migrate:postgres": "USE_SQLITE=false tsx src/mcp/persistence/migrate.ts",
    "migrate:sqlite": "USE_SQLITE=true tsx src/mcp/persistence/migrate-unified.ts",
    "generate-key": "tsx src/mcp/utils/generate-key.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPatterns=unit",
    "test:integration": "jest --testPathPatterns=integration",
    "test:e2e": "jest --testPathPatterns=e2e",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:debug": "DEBUG=true jest --verbose --no-coverage",
    "test:update-snapshots": "jest --updateSnapshot",
    "test:consolidation": "./test/scripts/test-server-consolidation.sh",
    "test:server-compatibility": "jest --testPathPatterns=server-compatibility --verbose",
    "test:transport-abstraction": "jest --testPathPatterns=transport-abstraction --verbose",
    "test:migration": "jest --testPathPatterns=server-migration --verbose",
    "test:consolidation-fast": "jest --testPathPatterns='(server-compatibility|transport-abstraction|server-migration)' --verbose --maxWorkers=1",
    "test:edge-cases": "NODE_OPTIONS='--max-old-space-size=4096' jest --testPathPattern=edge-cases --testTimeout=300000 --verbose",
    "test:edge-cases:coverage": "NODE_OPTIONS='--max-old-space-size=4096' jest --testPathPattern=edge-cases --testTimeout=300000 --coverage",
    "test:edge-cases:malformed": "jest test/edge-cases/malformed-input.test.ts --verbose",
    "test:edge-cases:resources": "NODE_OPTIONS='--max-old-space-size=4096' jest test/edge-cases/resource-limits.test.ts --testTimeout=600000 --verbose",
    "test:edge-cases:recovery": "jest test/edge-cases/error-recovery.test.ts --verbose",
    "test:edge-cases:timeouts": "NODE_OPTIONS='--max-old-space-size=4096' jest test/edge-cases/timeout-handling.test.ts --testTimeout=600000 --verbose",
    "test:stress": "NODE_OPTIONS='--expose-gc --max-old-space-size=8192' jest --testPathPattern=edge-cases --testTimeout=900000 --maxWorkers=2 --logHeapUsage",
    "test:performance": "NODE_OPTIONS='--expose-gc --max-old-space-size=4096' jest --testPathPattern=performance --testTimeout=600000 --verbose --maxWorkers=2 --logHeapUsage",
    "test:performance:benchmark": "NODE_OPTIONS='--expose-gc --max-old-space-size=4096' jest test/performance/benchmark.test.ts --testTimeout=900000 --verbose --maxWorkers=1",
    "test:performance:load": "NODE_OPTIONS='--expose-gc --max-old-space-size=4096' jest test/performance/load.test.ts --testTimeout=600000 --verbose",
    "test:performance:memory": "NODE_OPTIONS='--expose-gc --max-old-space-size=4096' jest test/performance/memory.test.ts --testTimeout=600000 --verbose",
    "test:performance:concurrent": "NODE_OPTIONS='--expose-gc --max-old-space-size=4096' jest test/performance/concurrent.test.ts --testTimeout=600000 --verbose",
    "test:performance:database": "NODE_OPTIONS='--expose-gc --max-old-space-size=4096' jest test/performance/database.test.ts --testTimeout=600000 --verbose",
    "test:performance:large-files": "NODE_OPTIONS='--expose-gc --max-old-space-size=4096' jest test/performance/large-files.test.ts --testTimeout=600000 --verbose",
    "test:performance:coverage": "NODE_OPTIONS='--expose-gc --max-old-space-size=4096' jest --testPathPattern=performance --coverage --testTimeout=600000",
    "lint:tests": "tsc --noEmit --project tsconfig.json test/**/*.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.1.0",
    "@stoplight/spectral-core": "^1.20.0",
    "@stoplight/spectral-parsers": "^1.0.5",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node-fetch": "^2.6.13",
    "@types/pg": "^8.15.5",
    "ajv": "^8.12.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "eventsource": "^4.0.0",
    "express": "^5.1.0",
    "js-yaml": "^4.1.0",
    "minimatch": "^9.0.3",
    "node-fetch": "^3.3.2",
    "pg": "^8.16.3",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "yaml": "^2.5.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.12.12",
    "@types/supertest": "^6.0.3",
    "glob": "^11.0.3",
    "jest": "^30.0.5",
    "jest-environment-node": "^30.0.5",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "tsx": "^4.7.0",
    "typescript": "^5.5.4"
  }
}
